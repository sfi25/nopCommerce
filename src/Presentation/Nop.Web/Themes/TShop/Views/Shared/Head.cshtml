@using Nop.Core;
@using Nop.Core.Infrastructure
@using Nop.Web.Framework.Themes
@using Nop.Web.Framework.UI
@{  
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;
    var themeName = EngineContext.Current.Resolve<IThemeContext>().WorkingThemeName;

    //add browser specific CSS files
    var browser = Request.Browser;

    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/style.css", themeName));
    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/bootstrap/css/bootstrap.min.css", themeName));

    if (browser.Browser == "IE" && browser.MajorVersion == 8)
    {
        Html.AddScriptParts("~/Scripts/selectivizr.min.js");
        Html.AddScriptParts("~/Scripts/respond.min.js");
    }

    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/bootstrap/js/bootstrap.min.js", themeName));
    Html.AddScriptParts("http://cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js");
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/jquery.cycle2.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/jquery.easing.1.3.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/jquery.parallax-1.1.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/helper-plugins/jquery.mousewheel.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/jquery.mCustomScrollbar.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/plugins/icheck-1.x/icheck.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/grids.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/owl.carousel.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/bootstrap.touchspin.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/home.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/script.js", themeName));

}